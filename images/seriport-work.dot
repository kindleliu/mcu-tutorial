digraph {
    rankdir=LR
    compound=true
    fontname="Inconsolata, Consolas"
    fontsize=10
    margin="0,0"
    ranksep=0.5
    nodesep=0.2
    penwidth=0.5
    
    node [shape=box, fontname="Inconsolata, Consolas", fontsize=10, penwidth=0.5, style=filled, colorscheme=spectral7]
    edge [fontname="Inconsolata, Consolas", fontsize=10, penwidth=0.5]


	Init[fillcolor=4]
	Receive[fillcolor=5]
	Buf[fillcolor=6]
	

	Receive -> Receive    
	Receive -> Buf

	edge[style=dotted]
	Init -> Receive
}

