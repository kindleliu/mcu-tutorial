digraph {
    rankdir=LR
    compound=true
    fontname="Inconsolata, Consolas"
    fontsize=10
    margin="0,0"
    ranksep=0.5
    nodesep=0.2
    penwidth=0.5
    
    node [shape=box, fontname="Inconsolata, Consolas", fontsize=10, penwidth=0.5, style=filled, colorscheme=spectral7]
    edge [fontname="Inconsolata, Consolas", fontsize=10, penwidth=0.5]

    
	PinTx [fillcolor=4]
    TxControl [fillcolor=5]
    RxBuf [fillcolor=6]
  
    PinTx -> TxControl[dir=back]
    TxControl -> TxBuf[dir=back]

    PinRx [fillcolor=4]
    RxControl [fillcolor=5]
    RxBuf [fillcolor=6]
  
    PinRx -> RxControl
    RxControl -> RxBuf

}

